
<div class="col-md-8">
  <%= form_for [post, comment] do |f| %>
    <% if comment.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(comment.errors.count, "errors") %>.</h4>
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_group_tag(comment.errors[:body]) do %>
        <%#= f.label :body %>
        <%= f.text_area :body, rows: 8, #autofocus: true,
            class: 'form-control', placeholder: "your comment" %>
    <% end %>

    <div class="form-group">
    <%= f.submit "Post", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
