<h2> Start a New Post</h2>
<%= form_for post do |f| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(post.errors.count, "error")%>.</h4>
      <ul>
        <% post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  <%= form_group_tag(post.errors[:name]) do %>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Enter post name" %>
  <% end %>
  </div>

  <div class="form-group" %>
  <%= form_group_tag(post.errors[:description]) do %>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter post description" %>
  <% end %>
  </div>

  <div class="form-group" %>
    <%= f.label :public, class: 'checkbox' do %>
      <%= f.check_box :public %> Private Topic
    <% end %>
  </div>

  <div class="form-group" %>
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
