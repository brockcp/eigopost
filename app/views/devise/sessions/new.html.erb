<div class="container padding-b-100">
 <div class="row text-center">
   <div class="col-sm-6 col-md-4 col-md-offset-2">
    <h3 class="color-2a">Log in</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "color-2a"  %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
      <br>
      <div class="field">
        <%= f.label :password, class: "color-2a"  %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "color-2a" %>
        </div>
      <% end -%>
      <br>
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-success" %>
      </div>
    <% end %>
    <br>
    <span class="color-2a"><%= render "devise/shared/links" %></span>
  </div>
  <div class="hidden-xs col-sm-6 col-md-4 sidebar">
  </div>
 </div>
</div>
