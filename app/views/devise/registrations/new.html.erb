<div class="container">
 <div class="row">
  <div class="col-sm-7">
    <h3 class="color-grey">Signup</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :username, class: "color-grey" %><br />
      <%= f.text_field :username, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :email, class: "color-grey" %><br />
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :password, class: "color-grey" %>
      <% if @minimum_password_length %>
      <!--<em>(<%#= @minimum_password_length %> characters minimum)</em> -->
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, class:"color-grey" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Join", class: "btn btn-success" %>
    </div>
    <% end %>
    <span class="color-grey-devise"><%= render "devise/shared/links" %></span>
  </div>
  <div class="col-sm-5 border-grey height-filler">
    filler
  </div>
 </div>
</div>
