<div class="container padding-b-100">
 <div class="row text-center">
  <div class="col-sm-6 col-md-4 col-md-offset-2">
    <h3 class="color-2a">Signup</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :username, class: "color-2a" %><br />
      <%= f.text_field :username, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :email, class: "color-2a" %><br />
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :password, class: "color-2a" %>
      <% if @minimum_password_length %>
      <!--<em>(<%#= @minimum_password_length %> characters minimum)</em> -->
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, class:"color-2a" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Join", class: "btn btn-success" %>
    </div>
    <% end %>
    <br>
    <span class="color-2a"><%= render "devise/shared/links" %></span>
  </div>
  <div class="hidden-xs col-sm-6 col-md-4 sidebar">
  </div>
 </div>
</div>
