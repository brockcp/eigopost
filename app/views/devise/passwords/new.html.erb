<div class="container">
 <div class="row">
  <div class="col-md-8">
    <h3 class="color-2">Forgot your password?</h3>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :email, class: "color-2" %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Reset Password", class: "btn btn-success" %>
        </div>
    <% end %>
    <span class="color-2-devise"><%= render "devise/shared/links" %></span>
  </div>
  <div class="col-md-4 border-grey height-filler">
    SIDEBAR
  </div>
 </div>
</div>
